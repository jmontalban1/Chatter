<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/receive_chatter_background_color"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:text="@string/receive_chatter_title"
        android:textColor="@color/receive_chatter_title_color"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/textview_receive_chatter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/receive_chatter_text_view_background_color"
        android:textColor="@color/receive_chatter_text_view_text_color"/>
</LinearLayout>